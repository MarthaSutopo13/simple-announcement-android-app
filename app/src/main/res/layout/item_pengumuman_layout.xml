<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="@dimen/margin_medium_size"
        app:cardCornerRadius="@dimen/margin_medium_size">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_small_15">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Gladi Bersin Lomba Tari"
                        android:textSize="@dimen/text_medium_size_16"
                        android:layout_alignParentLeft="true"/>

                    <LinearLayout
                        android:id="@+id/ll_signal"
                        android:layout_width="@dimen/margin_small"
                        android:layout_height="@dimen/margin_small"
                        android:background="@drawable/bg_circle_blue"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_small_15"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/text_medium_size"
                        android:layout_height="@dimen/text_medium_size"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_person"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:textSize="@dimen/text_medium_size_14"
                        android:text="Kevin Himawan"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small_12"
                    android:layout_marginBottom="@dimen/margin_small_12"
                    android:paddingLeft="@dimen/margin_small_15"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/text_medium_size"
                        android:layout_height="@dimen/text_medium_size"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_school"/>

                    <TextView
                        android:id="@+id/tv_school_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:textSize="@dimen/text_medium_size_14"
                        android:text="TK Bintang Kecil Jakarta"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_small_15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/text_medium_size"
                            android:layout_height="@dimen/text_medium_size"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_date"/>

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:textSize="@dimen/text_medium_size_14"
                            android:text="20 Desember"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/text_medium_size"
                            android:layout_height="@dimen/text_medium_size"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_time"/>

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:textSize="@dimen/text_medium_size_14"
                            android:text="09.00 - 10.00"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5"
                android:layout_above="@+id/tv_status"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/maya_blue"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:text="Konfirmasi Kedatangan"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
